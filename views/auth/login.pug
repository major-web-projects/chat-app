extends ../layouts/authLayout.pug

block content
    main.form-signin.container
        if errorMessage
            .alert.alert-danger #{errorMessage}
        form#loginForm(method="post")
            h1.h3.mb-3.fw-normal Login
            .form-group 
                label(for='email') Email or Username
                input#email.form-control(type='text' name="emailOrUserName" placeholder='Email or Username' value=emailOrUserName)
            
            .form-group
                label(for='password') Password
                input#password.form-control(type='password' name="password" placeholder='Password')
         
            .checkbox.mb-3
                label
                    input(type='checkbox', value='remember-me')
                    |  Remember me
            button.w-100.btn.btn-lg.btn-primary(type='submit') Login
        

        a(href="/auth/register") Don't have a account, please register 