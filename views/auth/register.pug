extends ../layouts/authLayout.pug

block content
    main.form-signin.container
        if errorMessage
            .alert.alert-danger #{errorMessage}
        form#registerForm(method="post" onsubmit="event.preventDefault(); validateForm();")
            h1.h3.mb-3.fw-normal Register
            .form-group
                label(for='firstName') First Name
                input#firstName.form-control(type="text" name="firstName" value=firstName placeholder="First name" required="")
            .form-group 
                label(for='lastName') Last Name
                input#lastName.form-control(type="text" name="lastName" value=lastName placeholder="Last name" required="")
            .form-group 
                label(for='userName') Username
                input#userName.form-control(type="text" name="userName" value=userName  placeholder="Username" required="")
            .form-group 
                label(for='email') Email address
                input#email.form-control(type='email' name="email" value=email  placeholder='name@example.com' required="")
            
            .form-group
                label(for='password') Password
                input#password.form-control(type='password' name="password"  placeholder='Password' required="")
            .form-group
                label(for='passwordConfirmation') Password Confirmation
                input#passwordConfirmation.form-control(type='password' name="passwordConfirmation"  placeholder='Password Confirmation' required="")
                    
            .checkbox.mb-3
                label
                    input(type='checkbox', value='remember-me')
                    |  Remember me
            button.w-100.btn.btn-lg.btn-primary(type='submit') Register
        

        a(href="/auth/login") Have a account, please Login 
    
    script.
        const password = document.getElementById("password")
        const passwordConfirm = document.getElementById("passwordConfirmation")
        const registerForm = document.getElementById("registerForm")

        function validateForm() {
            if (password.value !== passwordConfirm.value) {
                alert("Your password and confirmation password don't match")
            } else {
                registerForm.submit()
            }
        }

       